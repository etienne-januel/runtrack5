{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="d-flex flex-row justify-content-around flex-wrap">
    {% for projet in projets %}
        <div class="card p-2 m-3" style="max-width: 18rem;">
            <img src="{{ projet.image }}" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{ projet.title }}</h5>
                <p class="card-text">{{ projet.content | raw }}</p>
                <a href="{{ path('projet_page', {'id': projet.id}) }}" class="btn btn-primary">Show in details</a>
            </div>
        </div>
    {% endfor %}
    </div>
{% endblock %}
